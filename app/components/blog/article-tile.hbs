<div class="flex flex-col group rounded-sm bg-white/80 p-4 drop-shadow-xl">
  <div class="mb-6 flex flex grow-0 overflow-hidden">
    {{#if @article.image}}
      <LinkTo
        class="w-full uppercase transition duration-300 ease-in-out group-hover:scale-110"
        @route="blog.article"
        @model={{@article}}
      >
        <img class="w-full h-64" src="{{@article.image.formattedUrl}}" />
      </LinkTo>
    {{/if}}
  </div>
  <div class="grow-0 pb-4 text-2xl font-semibold transition duration-300 ease-in-out group-hover:text-gray-500">
    <LinkTo @route="blog.article" @model={{@article}}>
      {{@article.title}}
    </LinkTo>
  </div>
  <div class="flex grow flex-col text-sm">
    {{excerpt @article.body.processed words=15}}...
    <div class="flex grow flex-col justify-end self-end pt-2">
      <LinkTo
        class="mr-6 uppercase transition duration-300 ease-in-out group-hover:text-gray-500"
        @route="blog.article"
        @model={{@article}}
      >
        Read more &#8594;
      </LinkTo>
    </div>
  </div>
</div>