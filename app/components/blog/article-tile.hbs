<div class="rounded-md bg-white/80 drop-shadow-xl p-4">
  <div class="flex">
    {{#if @article.image}}
      <img class="h-12 w-12" src="http://localhost:8080{{@article.image.uri.url}}">
    {{/if}}
  </div>
  <div class="pb-4 text-2xl hover:text-gray-600">
    <LinkTo @route="blog.article" @model={{@article}}>
      {{@article.title}}
    </LinkTo>
  </div>
  <div class="flex flex-col text-sm">
    {{excerpt @article.body.processed}}...
    <div class="flex justify-end pt-2">
      <LinkTo
        class="mr-6 uppercase hover:text-gray-600"
        @route="blog.article"
        @model={{@article}}
      >
        Read more &#8594;
      </LinkTo>
    </div>
  </div>
</div>