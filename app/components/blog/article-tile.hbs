<div class="flex flex-col rounded-sm bg-white/80 p-4 drop-shadow-xl">
  <div class="flex pb-4">
    {{#if @article.image}}
      <img
        class="w-full"
        src="{{@article.image.uri.url}}"
      />
    {{/if}}
  </div>
  <div class="pb-4 text-2xl hover:text-gray-600">
    <LinkTo @route="blog.article" @model={{@article}}>
      {{@article.title}}
    </LinkTo>
  </div>
  <div class="flex flex-col text-sm">
    {{excerpt @article.body.processed words=15}}...
    <div class="flex self-end pt-2">
      <LinkTo
        class="mr-6 uppercase hover:text-gray-600"
        @route="blog.article"
        @model={{@article}}
      >
        Read more &#8594;
      </LinkTo>
    </div>
  </div>
</div>