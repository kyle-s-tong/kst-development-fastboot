<div class="grid grid-cols-4 py-8 px-2 sm:px-20">
  <div
    class="col-span-1 flex items-center justify-center px-2 lg:items-start lg:justify-start xl:ml-4 2xl:ml-8"
  >
    <figure
      class="flex h-12 w-12 items-center justify-center rounded-full border bg-kst-blue sm:h-16 sm:w-16"
    >
      <img
        src={{@service.imagePath}}
        alt="Small icon representing {{@service.title}}"
        class="h-6 w-6 sm:h-8 sm:w-8"
      />
    </figure>
  </div>
  <div class="col-span-3 lg:pl-2">
    <div class="text-md pb-1 tracking-wide lg:pb-4 lg:text-xl">
      {{@service.title}}
    </div>
    <div class="lg:text-md text-sm text-slate-400">
      {{@service.description}}
    </div>
  </div>
</div>