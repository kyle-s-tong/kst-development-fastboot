<div class="grid grid-cols-4 py-8 px-2 sm:px-20">
  <div class="col-span-1 items-center lg:items-start justify-center lg:justify-start  flex px-2 xl:ml-4 2xl:ml-8">
    <figure
      class="flex h-12 w-12 sm:h-16 sm:w-16 items-center justify-center rounded-full border bg-kst-blue"
    >
      <img
        src={{@service.imagePath}}
        alt="Small icon representing {{@service.title}}"
        class="w-6 h-6 sm:w-8 sm:h-8"
      />
    </figure>
  </div>
  <div class="col-span-3 lg:pl-2">
    <div class="text-md pb-1 tracking-wide lg:pb-4 lg:text-xl">
      {{@service.title}}
    </div>
    <div class="lg:text-md text-sm text-slate-400">
      {{@service.description}}
    </div>
  </div>
</div>