{{#if @isTextArea}}
  <textarea
    class="m-2 h-full bg-black/40 p-2 text-white"
    id={{@elementName}}
    name={{@elementName}}
    placeholder={{this.placeholder}}
    ...attributes
  ></textarea>
{{else}}
  <input
    class="m-2 bg-black/40 p-2 text-white"
    type="text"
    id={{@elementName}}
    name={{@elementName}}
    placeholder={{this.placeholder}}
    ...attributes
  />
{{/if}}