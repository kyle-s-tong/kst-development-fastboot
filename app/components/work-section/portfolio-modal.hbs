<div
  class="relative z-10 h-full w-full"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75"></div>
  <div class="fixed inset-0 z-10 h-full w-full overflow-y-auto">
    <div
      class="flex h-full w-full items-center justify-center p-4 text-center sm:p-0"
    >
      <div
        class="relative flex h-1/2 w-full transform flex-col overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:h-5/6 md:w-3/4"
      >
        <div
          class="absolute top-0 right-0 px-3 pt-3 sm:flex sm:flex-row-reverse sm:px-2 sm:pt-2"
        >
          <button {{on "click" @closeModal}} type="button" class="h-8 w-8"><img
              src="assets/svg/cross.svg"
              alt="Close button"
            /></button>
        </div>
        <div class="flex h-full w-full bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          {{#if @images}}
            <WorkSection::Slider @images={{@images}} />
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>