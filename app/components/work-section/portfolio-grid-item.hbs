<div class="h-full">
  <a class="cursor-pointer" {{on "click" this.openModal}}>
    <div class="relative flex justify-center">
      <div
        class="absolute flex h-full w-full flex-col items-center justify-center bg-kst-blue/90 opacity-0 duration-200 ease-out hover:opacity-100 hover:ease-in"
      >
        <h3 class="text-lg uppercase text-white">{{@item.title}}</h3>
        <div class="text-xs uppercase text-white">{{@item.subtitle}}</div>
      </div>
      <img
        src="{{@item.mainImagePath}}"
        class="h-full w-5/6 lg:w-full"
        alt="Image showing page from the project done for {{@item.title}}"
      />
    </div>
  </a>
  <div
    class="py-6 px-4 text-justify text-slate-400 lg:px-0"
  >{{@item.description}}</div>
</div>